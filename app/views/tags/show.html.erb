<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
<span><%= link_to "<< Back to Tags List", tags_path %></span>
<span><%= link_to "edit", edit_tag_path(@tag) %></span>
<span><%= link_to "delete", tags_path, method: :delete, data: {confirm: "Really delete the tag?"}%></span>